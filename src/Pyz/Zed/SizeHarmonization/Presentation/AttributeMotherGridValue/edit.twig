{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Attribute mother grid Value' %}

{% block head_title %}
    {{ widget_title | trans }}
{% endblock %}
{% block section_title %}
    {{ widget_title | trans }}
{% endblock %}

{% block action %}
    {{ backActionButton('/size-harmonization/attribute-mother-grid-value', 'List' | trans) }}
    {{ createActionButton('/size-harmonization/attribute-mother-grid-value/add', 'Create AMG Value' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
